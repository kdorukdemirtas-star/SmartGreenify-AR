<script>
    let scene, camera, renderer, greenhouse, sensors = [], particles = [], dataStreams = [];
    let isRunning = false;
    let mouseX = 0, mouseY = 0;
    let targetRotationX = 0, targetRotationY = 0;

    const startBtn = document.getElementById('start-btn');
    const instructions = document.getElementById('instructions');
    const stats = document.getElementById('stats');
    const sensorPanel = document.getElementById('sensor-panel');
    const loading = document.getElementById('loading');

    startBtn.addEventListener('click', () => {
        loading.classList.remove('hidden');
        
        setTimeout(() => {
            instructions.classList.add('hidden');
            stats.classList.remove('hidden');
            sensorPanel.classList.remove('hidden');
            loading.classList.add('hidden');
            isRunning = true;
            init();
            animate();
        }, 1000);
    });

    function init() {
        scene = new THREE.Scene();
        scene.fog = new THREE.Fog(0xFFF6E0, 15, 50);

        camera = new THREE.PerspectiveCamera(
            60,
            window.innerWidth / window.innerHeight,
            0.1,
            1000
        );
        camera.position.set(0, 4, 10);
        camera.lookAt(0, 0, 0);

        const canvas = document.getElementById('canvas');
        renderer = new THREE.WebGLRenderer({ 
            canvas: canvas, 
            antialias: true, 
            alpha: true 
        });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        renderer.setClearColor(0xFFF6E0, 1);

        // Enhanced Lighting
        const ambientLight = new THREE.AmbientLight(0xffffff, 0.3);
        scene.add(ambientLight);

        const mainLight = new THREE.PointLight(0x10b981, 2, 100);
        mainLight.position.set(0, 8, 0);
        scene.add(mainLight);

        const light1 = new THREE.PointLight(0x34d399, 1.5, 50);
        light1.position.set(8, 4, 8);
        scene.add(light1);

        const light2 = new THREE.PointLight(0x6ee7b7, 1.5, 50);
        light2.position.set(-8, 4, -8);
        scene.add(light2);

        const rimLight = new THREE.DirectionalLight(0x10b981, 0.5);
        rimLight.position.set(5, 10, 5);
        scene.add(rimLight);

        createGreenhouse();
        createSensors();
        createParticles();
        createDataStreams();
        createFloor();

        document.addEventListener('mousemove', onMouseMove, false);
        document.addEventListener('touchmove', onTouchMove, false);
        window.addEventListener('resize', onWindowResize, false);
    }

    function createGreenhouse() {
        const group = new THREE.Group();

        // Main frame
        const frameGeometry = new THREE.BoxGeometry(3.5, 2, 3.5);
        const edgesGeometry = new THREE.EdgesGeometry(frameGeometry);
        const frameMaterial = new THREE.LineBasicMaterial({ 
            color: 0x10b981,
            linewidth: 3,
            transparent: true,
            opacity: 1
        });
        const frame = new THREE.LineSegments(edgesGeometry, frameMaterial);
        group.add(frame);

        // Corner spheres
        const cornerPositions = [
            [-1.75, -1, -1.75], [1.75, -1, -1.75],
            [-1.75, -1, 1.75], [1.75, -1, 1.75],
            [-1.75, 1, -1.75], [1.75, 1, -1.75],
            [-1.75, 1, 1.75], [1.75, 1, 1.75]
        ];
        
        cornerPositions.forEach(pos => {
            const sphereGeo = new THREE.SphereGeometry(0.1, 16, 16);
            const sphereMat = new THREE.MeshStandardMaterial({ 
                color: 0x10b981,
                emissive: 0x10b981,
                emissiveIntensity: 1,
                metalness: 0.8
            });
            const sphere = new THREE.Mesh(sphereGeo, sphereMat);
            sphere.position.set(...pos);
            group.add(sphere);
        });

        // Glass panels with better material
        const glassMaterial = new THREE.MeshPhysicalMaterial({
            color: 0x10b981,
            transparent: true,
            opacity: 0.12,
            metalness: 0.2,
            roughness: 0.1,
            transmission: 0.8,
            clearcoat: 1.0,
            clearcoatRoughness: 0.1
        });
        const glassPanel = new THREE.Mesh(frameGeometry, glassMaterial);
        group.add(glassPanel);

        // Soil base with texture
        const soilGeometry = new THREE.BoxGeometry(3.2, 0.4, 3.2);
        const soilMaterial = new THREE.MeshStandardMaterial({ 
            color: 0x2d1b0e,
            roughness: 0.9,
            metalness: 0.1
        });
        const soil = new THREE.Mesh(soilGeometry, soilMaterial);
        soil.position.y = -0.8;
        group.add(soil);

        // Enhanced plant
        createEnhancedPlant(group);

        greenhouse = group;
        scene.add(greenhouse);
    }

    function createEnhancedPlant(parent) {
        // Main stem
        const stemGeo = new THREE.CylinderGeometry(0.08, 0.12, 1.2, 12);
        const stemMat = new THREE.MeshStandardMaterial({ 
            color: 0x1a5928,
            roughness: 0.7,
            metalness: 0.1
        });
        const stem = new THREE.Mesh(stemGeo, stemMat);
        stem.position.y = 0;
        parent.add(stem);

        // Multiple leaves with better geometry
        const leafMat = new THREE.MeshStandardMaterial({ 
            color: 0x10b981,
            side: THREE.DoubleSide,
            roughness: 0.5,
            metalness: 0.2,
            emissive: 0x064e3b,
            emissiveIntensity: 0.2
        });

        for (let i = 0; i < 8; i++) {
            const leafGeo = new THREE.ConeGeometry(0.4, 0.7, 4);
            const leaf = new THREE.Mesh(leafGeo, leafMat);
            leaf.rotation.z = Math.PI / 2;
            leaf.position.y = -0.3 + i * 0.18;
            leaf.position.x = (i % 2 === 0 ? 0.3 : -0.3);
            leaf.rotation.y = i * Math.PI / 4;
            parent.add(leaf);
        }

        // Top leaves cluster
        for (let i = 0; i < 4; i++) {
            const topLeafGeo = new THREE.ConeGeometry(0.35, 0.6, 4);
            const topLeaf = new THREE.Mesh(topLeafGeo, leafMat);
            topLeaf.rotation.z = Math.PI / 2.5;
            topLeaf.position.y = 0.8;
            topLeaf.rotation.y = i * Math.PI / 2;
            parent.add(topLeaf);
        }
    }

    function createSensors() {
        const sensorData = [
            { pos: [2.5, 0.8, 0], color: 0xff6b6b, size: 0.35 },
            { pos: [-2.5, -0.3, 0], color: 0x4ecdc4, size: 0.35 },
            { pos: [0, 1.8, 2.5], color: 0xffe66d, size: 0.35 },
            { pos: [0, -1, -2.8], color: 0x95e1d3, size: 0.35 }
        ];

        sensorData.forEach(({ pos, color, size }) => {
            // Sensor body
            const geo = new THREE.BoxGeometry(size, size, 0.15);
            const mat = new THREE.MeshStandardMaterial({ 
                color: color,
                emissive: color,
                emissiveIntensity: 0.5,
                metalness: 0.8,
                roughness: 0.2
            });
            const sensor = new THREE.Mesh(geo, mat);
            sensor.position.set(...pos);

            // Outer glow
            const glowGeo = new THREE.SphereGeometry(size * 0.8, 32, 32);
            const glowMat = new THREE.MeshBasicMaterial({ 
                color: color,
                transparent: true,
                opacity: 0.2
            });
            const glow = new THREE.Mesh(glowGeo, glowMat);
            sensor.add(glow);

            // Pulse ring
            const ringGeo = new THREE.RingGeometry(size * 0.6, size * 0.75, 32);
            const ringMat = new THREE.MeshBasicMaterial({ 
                color: color,
                transparent: true,
                opacity: 0.7,
                side: THREE.DoubleSide
            });
            const ring = new THREE.Mesh(ringGeo, ringMat);
            ring.rotation.x = Math.PI / 2;
            sensor.add(ring);
            ring.userData.isPulse = true;

            sensors.push(sensor);
            scene.add(sensor);
        });
    }

    function createParticles() {
        const particleGeo = new THREE.BufferGeometry();
        const count = 1500;
        const positions = new Float32Array(count * 3);
        const colors = new Float32Array(count * 3);

        for (let i = 0; i < count; i++) {
            positions[i * 3] = (Math.random() - 0.5) * 30;
            positions[i * 3 + 1] = (Math.random() - 0.5) * 30;
            positions[i * 3 + 2] = (Math.random() - 0.5) * 30;

            const color = new THREE.Color(0x10b981);
            colors[i * 3] = color.r;
            colors[i * 3 + 1] = color.g;
            colors[i * 3 + 2] = color.b;
        }

        particleGeo.setAttribute('position', new THREE.BufferAttribute(positions, 3));
        particleGeo.setAttribute('color', new THREE.BufferAttribute(colors, 3));

        const particleMat = new THREE.PointsMaterial({
            size: 0.08,
            vertexColors: true,
            transparent: true,
            opacity: 0.7,
            blending: THREE.AdditiveBlending,
            sizeAttenuation: true
        });

        const particleSys = new THREE.Points(particleGeo, particleMat);
        scene.add(particleSys);
        particles.push(particleSys);
    }

    function createDataStreams() {
        sensors.forEach((sensor, idx) => {
            const points = [];
            for (let i = 0; i < 50; i++) {
                const t = i / 50;
                const x = sensor.position.x * (1 - t);
                const y = sensor.position.y + t * 3;
                const z = sensor.position.z * (1 - t);
                points.push(new THREE.Vector3(x, y, z));
            }

            const curve = new THREE.CatmullRomCurve3(points);
            const geo = new THREE.TubeGeometry(curve, 50, 0.02, 8, false);
            const mat = new THREE.MeshBasicMaterial({ 
                color: sensors[idx].material.color,
                transparent: true,
                opacity: 0.4
            });
            const stream = new THREE.Mesh(geo, mat);
            scene.add(stream);
            dataStreams.push(stream);
        });
    }

    function createFloor() {
        const floorGeo = new THREE.CircleGeometry(15, 64);
        const floorMat = new THREE.MeshStandardMaterial({ 
            color: 0xe8d5b7,
            transparent: true,
            opacity: 0.5,
            roughness: 0.8
        });
        const floor = new THREE.Mesh(floorGeo, floorMat);
        floor.rotation.x = -Math.PI / 2;
        floor.position.y = -2;
        scene.add(floor);
    }

    function onMouseMove(event) {
        mouseX = (event.clientX / window.innerWidth) * 2 - 1;
        mouseY = -(event.clientY / window.innerHeight) * 2 + 1;
    }

    function onTouchMove(event) {
        if (event.touches.length > 0) {
            event.preventDefault();
            mouseX = (event.touches[0].clientX / window.innerWidth) * 2 - 1;
            mouseY = -(event.touches[0].clientY / window.innerHeight) * 2 + 1;
        }
    }

    function onWindowResize() {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
    }

    function animate() {
        if (!isRunning) return;
        requestAnimationFrame(animate);

        const time = Date.now() * 0.001;

        // Smooth camera movement
        targetRotationY = mouseX * Math.PI * 0.2;
        targetRotationX = mouseY * Math.PI * 0.1;

        if (greenhouse) {
            greenhouse.rotation.y += (targetRotationY - greenhouse.rotation.y) * 0.05;
            greenhouse.rotation.x += (targetRotationX - greenhouse.rotation.x) * 0.05;
            greenhouse.rotation.y += 0.003;
        }

        // Animate sensors
        sensors.forEach((sensor, idx) => {
            sensor.rotation.y += 0.02;
            sensor.rotation.z += 0.01;
            sensor.position.y += Math.sin(time * 2 + idx) * 0.002;

            sensor.children.forEach(child => {
                if (child.userData.isPulse) {
                    const scale = 1 + Math.sin(time * 3 + idx) * 0.4;
                    child.scale.set(scale, scale, 1);
                    child.material.opacity = 0.4 + Math.sin(time * 3 + idx) * 0.3;
                }
            });
        });

        // Animate particles
        particles.forEach(system => {
            system.rotation.y += 0.0003;
            const positions = system.geometry.attributes.position.array;
            for (let i = 0; i < positions.length; i += 3) {
                positions[i + 1] += Math.sin(time + i * 0.1) * 0.002;
            }
            system.geometry.attributes.position.needsUpdate = true;
        });

        // Animate data streams
        dataStreams.forEach((stream, idx) => {
            stream.material.opacity = 0.2 + Math.sin(time * 2 + idx) * 0.2;
        });

        renderer.render(scene, camera);
    }
</script>
```

</body>
</html>
